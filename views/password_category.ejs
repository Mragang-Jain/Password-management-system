      </div>
    </nav>
   <div style="padding: 40px; margin: 40px;">
    <h2>Password Category List </h2>
    <br>
    <table class = "table">
      <thread>
      <tr>
      <th>Password Category Name </th>
    
      <th> Action </th>
      </tr>
      </thread>
      <tbody>
         <% if(records.length>0){
            records.forEach(function(row){ %>
            <tr>
            <td><%= row.password_category %></td>
        <td><a class="btn btn-primary btn-xs" href="/password_category/edit/<%= row._id %>"><i class="fa fa-edit"></i></a>
            <a class="btn btn-danger btn-xs" href="/password_category/delete/<%= row._id %>"><i class="fa fa-trash"></i></a></td>
      </tr>
       <% }) } %>
      </tbody>
      
    </table>

  </div>

   
        </div>
    </div>
  </body>
</html>
